#include <ESP8266WiFi.h>
#include <ArduinoOTA.h>
#include <ESP8266mDNS.h>
///////////////////////////////////////////////////////////////////
void setup() {
  Serial.begin(115200);
  delay(100);
  WiFi.mode(WIFI_STA);////
  delay(10);////
  WiFi.begin("Luana", "40224022");////
  delay(100);////
  ///////////////////////////////////////////////////////////////////
  while (WiFi.status() != WL_CONNECTED) {////
    Serial.print(".");
    delay(500);
  }
  ///////////////////////////////////////////////////////////////////

  if (WiFi.status() == WL_CONNECTED) {
    Serial.println();
    Serial.println(WiFi.localIP());
  } else {
    Serial.println("NÃ£o conectou");
    delay(10);
  }
///////////////////////////////////////////////////////////////////
  ArduinoOTA.begin();
}
///////////////////////////////////////////////////////////////////
void loop() {
  ArduinoOTA.handle();
}
